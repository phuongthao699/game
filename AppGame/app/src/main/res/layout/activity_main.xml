<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <Button
        android:id="@+id/choigame_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:background="@android:color/holo_green_light"
        android:onClick="ChonLinhVuc"
        android:text="Chơi Game"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <Button
        android:id="@+id/bangxephang_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
       android:background="@android:color/holo_blue_light"
        android:text="Bảng Xếp Hạng"
        android:onClick="BangXepHang"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/choigame_button"
        app:layout_constraintStart_toStartOf="@+id/choigame_button"
        app:layout_constraintTop_toBottomOf="@+id/choigame_button" />

    <Button
        android:id="@+id/muacredit_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_purple"
        android:text="Mua Credit"
        android:onClick="MuaCredit"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/bangxephang_button"
        app:layout_constraintStart_toStartOf="@+id/bangxephang_button"
        app:layout_constraintTop_toBottomOf="@+id/bangxephang_button" />

    <Button
        android:id="@+id/quanlytk-button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_orange_light"
        android:text="Quản Lý Tài Khoản"
        android:onClick="QuanLyTaiKhoan"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/muacredit_button"
        app:layout_constraintStart_toStartOf="@+id/muacredit_button"
        app:layout_constraintTop_toBottomOf="@+id/muacredit_button" />

    <Button
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Lịch Sử Chơi Game"
        android:onClick="LichSuChoiGame"
        app:layout_constraintEnd_toEndOf="@+id/quanlytk-button"
        app:layout_constraintStart_toStartOf="@+id/quanlytk-button"
        app:layout_constraintTop_toBottomOf="@+id/quanlytk-button"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_light"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Tên Đăng Nhập"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="Credit"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        app:srcCompat="@drawable/diamond" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cap4_pp_683" />

</androidx.constraintlayout.widget.ConstraintLayout>